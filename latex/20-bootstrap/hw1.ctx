t.0=Sys.time() #starting time
#
one.N=function()
{
  N=0
  p=runif(1) #p: product
  while (p >= exp(-3))
  {
    p=p*runif(1); N=N+1
  }
return(N)
}
#
set.seed(1235) #seed initialization
n.rep=10000 #sample size
iid.sample=replicate(n.rep, one.N())
N.bar=mean(iid.sample) #sample mean (N.bar)
se=sd(iid.sample)/n.rep^.5 #standard error (S/n^.5) of sample mean
n.rep
N.bar
se
N.bar-2*se; N.bar+2*se #95% CI for E(N)
# estimate the distribution of N
for (i in 1: (max(iid.sample)+1) )
{
p[i]=mean(iid.sample == (i-1) )
print(paste("N=",i-1))
print(paste(" with prob.",p[i]))
print(paste("-----------------------"))
}
Sys.time()-t.0 #execution time
